<Window x:Class="RegistrationAnd_AccountingOfEquipment.AddingType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistrationAnd_AccountingOfEquipment"
        mc:Ignorable="d"
        Title="Добавление" Height="165" Width="300">
    <Border Background="Azure" CornerRadius="35" Margin="5,5,5,5" Width="auto" Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="50"/>
        </Border.Effect>
        <StackPanel Margin="5,5,5,5">
            <TextBlock Text="Название"/>
            <TextBox/>
            <StackPanel Margin="5,5,5,5" Orientation="Horizontal">
                <Button Margin="0,0,5,0" Content="Отмена" Width="70" Height="25"/>
                <Button Margin="5,0,0,0" Content="Добавить" Width="70" Height="25"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
